    <script>
        // AMÉLIORATION 9: Classe d'autocomplétion améliorée
        class Autocomplete {
            constructor(input, items) {
                this.input = input;
                this.items = items;
                this.currentFocus = -1;
                this.setup();
            }

            setup() {
                this.list = document.createElement('div');
                this.list.classList.add('autocomplete-list');
                this.input.parentNode.appendChild(this.list);

                this.input.addEventListener('input', () => this.updateList());
                this.input.addEventListener('keydown', (e) => this.handleKeydown(e));
                document.addEventListener('click', (e) => {
                    if (!this.input.contains(e.target) && !this.list.contains(e.target)) {
                        this.list.classList.remove('show');
                    }
                });
            }

            updateList() {
                const value = this.input.value.toLowerCase();
                this.currentFocus = -1;
                this.list.innerHTML = '';

                if (!value) {
                    this.list.classList.remove('show');
                    return;
                }

                const matchingItems = this.items.filter(item =>
                    item.toLowerCase().includes(value)
                );

                if (matchingItems.length) {
                    this.list.classList.add('show');
                    
                    // AMÉLIORATION: Tri des résultats par pertinence
                    matchingItems.sort((a, b) => {
                        const aStartsWithValue = a.toLowerCase().startsWith(value);
                        const bStartsWithValue = b.toLowerCase().startsWith(value);
                        
                        if (aStartsWithValue && !bStartsWithValue) return -1;
                        if (!aStartsWithValue && bStartsWithValue) return 1;
                        return a.localeCompare(b);
                    });
                    
                    matchingItems.forEach((item, index) => {
                        const div = document.createElement('div');
                        div.classList.add('autocomplete-item');
                        
                        // AMÉLIORATION: Mise en surbrillance du texte correspondant
                        const regex = new RegExp(`(${value})`, 'gi');
                        const highlightedText = item.replace(regex, '<b>$1</b>');
                        div.innerHTML = highlightedText;
                        
                        // AMÉLIORATION: Délai progressif pour l'animation
                        div.style.animationDelay = `${index * 50}ms`;
                        div.style.opacity = "0";
                        div.style.animation = "fadeIn 0.3s ease-out forwards";
                        
                        div.addEventListener('click', () => {
                            this.input.value = item;
                            this.list.classList.remove('show');
                            
                            // AMÉLIORATION: Effet de sélection
                            this.input.style.animation = "highlightText 1s";
                            setTimeout(() => {
                                this.input.style.animation = "";
                            }, 1000);
                        });
                        
                        this.list.appendChild(div);
                    });
                } else {
                    this.list.classList.remove('show');
                }
            }

            handleKeydown(e) {
                const items = this.list.getElementsByTagName('div');
                if (!items.length) return;

                if (e.key === 'ArrowDown') {
                    this.currentFocus++;
                    if (this.currentFocus >= items.length) this.currentFocus = 0;
                    this.setActive(items);
                    e.preventDefault(); // Empêche le curseur de se déplacer
                } else if (e.key === 'ArrowUp') {
                    this.currentFocus--;
                    if (this.currentFocus < 0) this.currentFocus = items.length - 1;
                    this.setActive(items);
                    e.preventDefault(); // Empêche le curseur de se déplacer
                } else if (e.key === 'Enter' && this.currentFocus > -1) {
                    e.preventDefault();
                    items[this.currentFocus].click();
                } else if (e.key === 'Escape') {
                    this.list.classList.remove('show');
                }
            }

            setActive(items) {
                Array.from(items).forEach(item => item.classList.remove('selected'));
                if (this.currentFocus > -1) {
                    items[this.currentFocus].classList.add('selected');
                    // AMÉLIORATION: Défilement automatique pour rendre l'élément visible
                    items[this.currentFocus].scrollIntoView({ block: 'nearest' });
                }
            }
        }

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            // AMÉLIORATION 10: Gestionnaire de thème intégré
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    // Si en mode sombre, passer au mode clair
                    if (document.documentElement.classList.contains('dark')) {
                        document.documentElement.classList.remove('dark');
                        localStorage.setItem('color-theme', 'light');
                    } else {
                        // Sinon, passer au mode sombre
                        document.documentElement.classList.add('dark');
                        localStorage.setItem('color-theme', 'dark');
                    }
                });
            }
            
