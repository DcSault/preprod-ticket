            // Animation de soumission du formulaire
            const loginForm = document.querySelector('form');
            const buttonText = document.getElementById('buttonText');
            const loadingSpinner = document.getElementById('loadingSpinner');
            
            if (loginForm && buttonText && loadingSpinner) {
                loginForm.addEventListener('submit', function(e) {
                    buttonText.classList.add('hidden');
                    loadingSpinner.classList.remove('hidden');
                    // Ne pas annuler l'événement, laissez le formulaire se soumettre
                });
            }
            
            // Gestionnaire de thème - CORRIGÉ
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    // Si en mode sombre, passer au mode clair
                    if (document.documentElement.classList.contains('dark')) {
                        document.documentElement.classList.remove('dark');
                        localStorage.setItem('color-theme', 'light');
                    } else {
                        // Sinon, passer au mode sombre
                        document.documentElement.classList.add('dark');
                        localStorage.setItem('color-theme', 'dark');
                    }
                });
            }
        });
